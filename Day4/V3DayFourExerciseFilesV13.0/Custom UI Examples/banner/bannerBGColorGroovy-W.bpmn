      <bpmn2:script>import groovy.json.JsonOutput

def payload = [
    action       : 'addChatNotesIntegration',
    componentType: 'ChatNote',
    payload      : [
        [
        component    : 'Banner',
        header       : 'Training Domain Hotels',
        title        : 'Welcomes YOU',
		styles: [
            height: '100%',
            color: "#fff",   //White Text comes from this value
            backgroundColor: "#f44242"  //Background Color comes from this value
        ],
        actionProcess: [
			actionName: 'bannerSubFlowTester',
			//actionArguments execution scope var: value pair
			actionArguments: [
				username: "Special Guest"],
			actionMessage: 'You have clicked edit'
			],
        subcomponents: [
            [
            subcomponent: 'Markup',
            markupType: 'Default',
            value: 'Congratulations!',
            fontSize: 'title',
            fontWeight: 'bold'
            ],
        [
            subcomponent: 'Markup',
            markupType: 'Default',
            value: 'You have chosen an excellent hotel.',
            fontSize: 'title',
            fontWeight: 'normal'
            ],  
        [
            subcomponent: 'Markup',
            markupType: 'Default',
            value: 'You\'re about to have an amazing experience.',
            fontSize: 'body',
            fontWeight: 'normal'
            ],
        [
            subcomponent: 'Markup',
            markupType: 'Default',
            value: 'It\'s going to be spectacular.',
            fontSize: 'body',
            fontWeight: 'normal'
            ],
        [
            subcomponent: 'Markup',
            markupType: 'Buttons',
            buttons: [
                //this is where a square bracket was missing
                [label: 'Book a Room Now',
                value: 'Reservation',
				actionProcess:[
					actionName: 'reserveARoom',
					actionMessage: 'Making a Hotel Reservation'
				]
        ]
 
        ]
    ]
]
]
]
]
 
def jsonString = JsonOutput.toJson(payload)

execution.setVariable('jsonString',jsonString)</bpmn2:script>
